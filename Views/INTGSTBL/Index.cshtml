@model IEnumerable<HangOut.Models.Inventory.INTGSTBL>
@using HangOut.Models.Inventory;
@{
    Layout = null;
}

<h2>Index</h2>

<div class="card">

    <div class="card-header">
        <h3 class="text-center">Goods</h3>
    </div>
    <div class="col-md-2">
        <button onclick="CreateEdit('0')" class="btn btn-info form-control">Add One</button>
    </div>
    <div class="card-body">
        <table class="table" id="TBLID">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.GSID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CatID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Unit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Qty)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="Tbody">
                @foreach (INTGSTBL Obj in Model)
                {
                <tr id="@Obj.GSID">
                    <td>@Obj.CatID</td>
                    <td>@Obj.Name</td>
                    <td>@Obj.Type</td>
                    <td>@Obj.Unit</td>
                    <td>@Obj.Qty</td>
                    <td>
                        <button class="btn btn-warning btn-sm " onclick="CreateEdit(@Obj.GSID)"> Edit</button>
                        <button class="btn btn-danger btn-sm " onclick="Delete(@Obj.GSID)"> Delete</button>
                    </td>
                </tr>
                }

            </tbody>
        </table>

    </div>
</div>
