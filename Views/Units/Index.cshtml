@model IEnumerable<HangOut.Models.Inventory.INTUnits>
@using HangOut.Models.Inventory;
<div class="card">
    <div class="card-header">
        <h5 class="text-center"><b>Units</b></h5>
    </div>
    <button onclick="CreateEdit('0')" class="btn btn-info form-control">Add Unit</button>
    <div class="card-body">
        <table class="table table-bordered table-hover w-100" id="TBLID">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (INTUnits item in Model)
                {
                    <tr id="@item.UnitID">
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <button class="btn btn-warning btn-sm " onclick="CreateEdit(@item.UnitID)"> Edit</button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
   var  AddCategory = false;
    function CreateEdit(ID) {
        if (ID != "0") {
            AddCategory = false;
        } else {
            AddCategory = true;
        }
        console.log("sdxsad");
        $.ajax({
            type: 'GET',
            url: "/Units/CreateEdit?ID=" + ID,
            success: function (data) {
                makedpt("INTUnits");
                $("#INTUnits > .modal-dialog > .modal-content > .modal-body").html(data);
                showdpt("INTUnits");
                $('#waiting').hide();
            },
            error: function (jqXhr, textStatus, errorMessage) { // error callback
                $('#waiting').hide();
            }
        });

    }
    function JsonSuccess(Jobj) {
        var Jitmobj = Jobj.data;
        console.log(Jitmobj);
        hidedpt("INTUnits");
        $('#waiting').hide();
        var HtmlStr = "<tr id='" + Jitmobj.UnitID + "'>";
        HtmlStr += '<td>' + Jitmobj.UnitID + '</td>';
        HtmlStr += '<td>' + Jitmobj.Name + '</td>';
        HtmlStr += '<td><button class="btn btn-warning btn-sm " onclick="CreateEdit(' + Jitmobj.UnitID + ')"> Edit</button>';
        HtmlStr += ' </td ></tr > ';
        if (AddCategory) {
            $("#tbody").append(HtmlStr);
        }
        else {
            $('#' + Jitmobj.CatID).remove();
            $("#tbody").append(HtmlStr);
        }
    }

</script>