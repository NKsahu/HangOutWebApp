                                    </tr>
                                </thead>
                                <tbody id="AddItem"></tbody>
                            </table>
                        </div>
                        <!--Add More Items-->
                        <div id="AddMoreItems" class="btn-group col-md-12" role="group"  >
                            <button type="button" style="color:#ffffff;border-radius:5px;" class="form-control btn BlackClr">
                                Add More Items
                            </button>
                        </div>

                        <div class="btn-group btn-group-justified row" role="group" id="ChargeBtn" style="width:100%;">
                            <!---->
                            <div class="row" style="width:100%">
                                <div id="SubMitbtn" class="btn-group col-md-6" role="group" style="width:50% ;display:none;">
                                    <button type="button" class="form-control btn BlackClr" style="color:#ffffff;border-radius:5px;" onclick="SUBMIT();">
                                        Send to CHEF
                                    </button>
                                </div>
                                <div id="InstantClear" class="btn-group col-md-6" role="group" style="width:50%;display:none;" onclick="INSTANTCLR()">
                                    <button type="button" style="color:#ffffff;border-radius:5px;" class="form-control btn BlackClr">
                                        Direct ADD-To BILL
                                    </button>
                                </div>
                            </div>
                            <!--discount and charge-->
                            <div class="row" style="width:100%">
                                <div id="AddCharge" class="col-md-6" style="width:50%  ;">
                                    <button type="button" style="color:#ffffff;border-radius:5px;" class=" btn BlackClr form-control" onclick="AddChargeDiscnt(2);">
                                        Add Charge
                                    </button>
                                </div>
                                <div id="Discnt" class="col-md-6" style="width:50%; ">
                                    <button type="button" style="color:#ffffff;border-radius:5px;" class=" btn BlackClr form-control" onclick="AddChargeDiscnt(1);">
                                        Discount
                                    </button>
                                </div>
                            </div>

                            <div id="Charge" class="btn-group" role="group" style="width:100%; padding:10px;" onclick="Charge()">
                                <button type="button" style="color:#ffffff;border-radius:5px;" class="form-control btn GreenClr"  id="FinalAmtCharge">
                                    CHARGE
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
    </div>
       
    


<script>
    
    var myVar = setTimeout(function () { ReloadSeating();}, 20000);
    $("#Order").css('background-color', '#44cd4a');
    $("#AllSeating").css('background-color', '#44cd4a');
    GeTablesTakeAwya();
    function SeatingClick(SeatingId) {
        GetItemList(SeatingId);
        $("#CartItemsMenu").show();
        $("#AddMoreItems").show();
        document.getElementById("InstantClear").style.display = "none";
        document.getElementById("SubMitbtn").style.display = "none";
        
    }
    function SeatingDBClick(SeatingId) {
        
        GetOnlyItemsList(SeatingId)
        HideSeatingShowItem();
        
    }
    $("#Order").click(function () {
        OrderClick();
    });
    $("#AddMoreItems").click(function () {
        GetOnlyItemsList(CurrentOrder)
        $("#AddMoreItems").hide();
        document.getElementById("InstantClear").style.display = "block";
        document.getElementById("SubMitbtn").style.display = "block";
        HideSeatingShowItem();
    });

    function HideSeatingShowItem() {
         $("#Seating").hide();
        $("#SeatingFilter").hide();
        $("#MenuItems").show();
        $("#MenuFilter").show();
        $("#CartItemsMenu").show();
        $("#Order").css('background-color', '#000000');
        $("#Current").css('background-color', '#44cd4a');
        $("#SearchFilter").hide();
        $("#AddMoreItems").hide();
    }
    function OrderClick() {
         $("#Order").css('background-color', '#44cd4a');
        $("#Current").css('background-color', '#000000');
        $("#Seating").show();
        $("#SeatingFilter").show();
        $("#CartItemsMenu").show();
        $("#MenuItems").hide();
        $("#SearchFilter").show();
        $("#MenuFilter").hide();
        SeatingClick(CurrentOrder);
        
    }
    function ShowSearch() {
        $("#SearchIcon").hide();
        $("#SearchLabel").hide();
        $("#TblSearch").removeClass();
        $("#TblSearch").addClass('col-md-11');
        $("#SearChTbl").show();
        $("#Cross").show();
        $("#SearChTbl").focus();
    }
    function CancelSearch(event) {
        $(event).hide();
        $("#SearchIcon").show();
         $("#TblSearch").removeClass();
        $("#TblSearch").addClass('col-md-9');
        $("#SearChTbl").hide();
         $("#SearchLabel").show();
        $("#SearChTbl").val('').keyup();
        
    }
    function ShowHidden(event) {
        $(event).parent('div').hide();
        var hiddenmenuslist = document.getElementsByClassName('hiddenmenus');
        for (var i = 0; i < hiddenmenuslist.length; i++) {
            hiddenmenuslist[i].style.display = 'block';
        }
    }
</script>