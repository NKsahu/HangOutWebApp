@model IEnumerable<HangOut.Models.HG_Floor_or_ScreenMaster>

@{
    Layout = null;
}
@using HangOut.Models

<div class="card">
    <div class="card-header">
        <h1 style="text-align:center"><b>SCREEN </b> </h1>
        <hr />
    </div>
    <button onclick="CreateEdit('0')" class="btn btn-success"><i class="fa fa-plus">ADD</i></button>
    <div class="card-body">
        <table class="table table-bordered table-hover w-100" id="TBLID">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Screen Id")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="Tbody">
                @foreach (var item in Model)
                {
                    <tr id="@item.Floor_or_ScreenID">
                        <td>
                            @Html.DisplayFor(modelItem => item.Floor_or_ScreenID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        
                        <td>
                            <button onclick="CreateEdit(@item.Floor_or_ScreenID)" class="btn btn-warning btn-sm "> Edit</button>
                            <button class="btn btn-danger btn-sm " onclick="Delete(@item.Floor_or_ScreenID)"> Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    var AddTr = false;
    function JsonSuccess(Jobj) {
        hidedpt("CreateScrn");
        var Jitmobj = Jobj.data;
        var HtmlStr = "<tr id='" + Jitmobj.Floor_or_ScreenID+"'>";
        HtmlStr += '<td>' + Jitmobj.Floor_or_ScreenID+'</td>';
        HtmlStr += '<td>' + Jitmobj.Name+'</td>';
        HtmlStr += '<td><button class="btn btn-warning btn-sm " onclick="CreateEdit(' + Jitmobj.Floor_or_ScreenID + ')"> Edit</button>';
        HtmlStr += '<button class="btn btn-danger btn-sm " onclick="Delete(' + Jitmobj.Floor_or_ScreenID + ')"> Delete</button>';
        HtmlStr += '</td ></tr >';
        if (AddTr) {
            $("#Tbody").append(HtmlStr);
        }
        else {
            $('#' + Jitmobj.Floor_or_ScreenID).remove();
            $("#Tbody").append(HtmlStr);
        }

        $('#waiting').hide();
    }

    function CreateEdit(ID) {
        if (ID != "0") {
            AddTr = false;
        } else {
            AddTr = true;
        }
        $('#waiting').show();
        $.ajax({
            type: 'GET',
            url: "/HG_Floor_or_ScreenMaster/ScreenCreateEdit?ID="+ID+"",
            success: function (data) {
                makedpt("CreateScrn");
                $("#CreateScrn > .modal-dialog > .modal-content > .modal-body").html(data);
                showdpt("CreateScrn");
                $('#waiting').hide();
            },
            error: function (jqXhr, textStatus, errorMessage) { // error callback
                $('#waiting').hide();
            }
        });

    }

    function Delete(ID) {
        if (confirm('Are You Sure')) {
            $('#waiting').show();
            $.ajax({
                type: 'GET',
                url: "/HG_Floor_or_ScreenMaster/Delete?ID=" + ID,
                success: function (data) {
                    //  var da = JSON.parse(data);
                    if (data.msg != null && data.msg != "") {
                        alert(data.msg);

                    }
                    else {
                        $("#" + ID).hide();
                    }
                    console.log(data);
                    $('#waiting').hide();
                },
                error: function (jqXhr, textStatus, errorMessage) { // error callback
                    console.log(errorMessage);
                    Onfail(errorMessage.MSG);
                    $('#waiting').hide();
                }
            });
        }

    }

</script>

