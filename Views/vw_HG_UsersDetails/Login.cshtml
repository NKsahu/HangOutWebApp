@model HangOut.Models.vw_HG_UsersDetails

<style>
    #LoginModal {
        font-family: 'Roboto', sans-serif;
    }

    body {
        padding: 100px 0;
        background-color: #efefef
    }

    a, a:hover {
        color: #333
    }
</style>
<div class="modal hide fade" id="LoginModal" style="background-image:url('../../Assets/back.jpg');background-repeat: no-repeat;background-size: 100% 100%;">
    <div class="row" style="height:100%; z-index: 999;background-color:rgba(0, 0, 0, 0.63)">
        <div class="card" id="logsin" style="position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%); min-width:280px; max-width:300px; box-shadow:2px 4px 4px #000000">
            <div class="card-header" style="background-color:#223D71">
                <div class="row">
                    <div class="col text-center" style="margin-top:-40px;">
                        <img src="~/Assets/fork.png" width="70" height="70" />
                        <h3 class="text-white">HANGOUT</h3>
                    </div>
                </div>
            </div>
            <div class="card-body pt-1" id="LogSin">
                @using (Ajax.BeginForm("LoginPost", "vw_HG_UsersDetails", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", LoadingElementId = "waiting" }))
                {
                    <div class="row">
                        <div class="col-md-12">
                            @Html.Label("User Login ", new { @class = "control-label " })
                            <div class="input-group  ">
                                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                                <div class=" input-group-append">
                                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-user-tie"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            @Html.Label("Password ", new { @class = "control-label " })
                            <div class="input-group  ">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required", id = "myInput", type = "password" } })
                                <div class=" input-group-append">
                                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-unlock-alt"></i></span>
                                </div>
                            </div>
                                <br />
                                <input type="checkbox" onclick="myFunction()">Show Password
                            </div>
                            <div class="col-md-12 mt-3">
                                <button type="submit" style="background-color:#223D71" class="btn  w-100 text-white">Login</button>
                            </div>
                        </div>
                }

            </div>
            <div class="card-footer pb-1 pt-0">
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#LoginModal').modal('show');
</script>
   
<script>
    function myFunction() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
