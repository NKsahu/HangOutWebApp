@model HangOut.Models.vw_HG_UsersDetails
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Assets/Login Assets/css/util.css" rel="stylesheet" />
    <link href="~/Assets/Login Assets/css/main.css" rel="stylesheet" />
</head>
<style>
    #LoginModal {
        font-family: 'Roboto', sans-serif;
    }
</style>
<body>
    <div id="Master">

        <div class="container-login100" style=" background-image: url('../../Assets/Login Assets/images/fooddo.jpg');">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
                @using (Ajax.BeginForm("LoginPost", "vw_HG_UsersDetails", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Master", LoadingElementId = "waiting", OnSuccess = "OnSuccess" }))
                {
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-37">
                            Sign In
                        </span>

                        <div style="width:100%" class="  m-b-25" data-validate="Enter User Name">
                            @Html.TextBoxFor(model => model.UserId, new { @class = "input100", required = "required", placeholder = "User Name", type = "text" })
                            <span class="focus-input100"></span>
                        </div>

                        <div style="width:100%" class="  m-b-25" data-validate="Enter password">
                            @Html.TextBoxFor(model => model.Password, new { @class = "input100", required = "required", placeholder = "Password", id = "myInput", type = "password" })
                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 validate-input m-b-25">
                            <input type="checkbox" onclick="myFunction()">Show Password
                        </div>
                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn" type="submit">
                                Sign In
                            </button>
                        </div>

                    </form>
                }

            </div>
        </div>
    </div>
</body>
<script>
  //  $('#LoginModal').modal('show');
    function myFunction() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
    
</script>
