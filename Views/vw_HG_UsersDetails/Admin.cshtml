        </label>
        @if (UserType == "SA")
        {
            <a class="btn btn-lg text-white " href="/vw_HG_UsersDetails/Inventry"><i class="fas fa-truck-moving"></i></a>
            <a class="btn btn-lg text-white " href="/vw_HG_UsersDetails/Account"><i class="fas fa-rupee-sign"></i></a>
