@using HangOut.Models;
@{ 
    Layout = null;
    List<HG_Items> Items = new HG_Items().GetAll();
}
<div class="card">
    <div class="card-header card-header-color">
        <h3 class="text-center text-white">Items</h3>
    </div>
    <div class="card-body">
     
<table id="ItemList" style="margin-top:15px;">
    <thead>
        <tr>
            <th>Select</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0;i<Items.Count;i++)
        {
            <tr>
                <td>
                    <input type="checkbox" onclick="AddItem(this,@Items[i].ItemID)" class="form-control" />
                </td>
                <td>@Items[i].Items</td>
            </tr>
        }

    </tbody>
</table>
    </div>

    <div class="card-footer">
        <div class="row">
            <div class="col-md-5">

            </div>
            <div class="col-md-2">
                <button onclick="Hideme();" class="btn btn-sm btn-danger form-control">Ok</button>
            </div>

            <div class="col-md-5">

            </div>
        </div>
    </div>
</div>
<script>
    setTimeout(function () { LoadDataTable('ItemList') }, 100);
</script>
