@model IEnumerable<HangOut.Models.HG_Items>
   @using HangOut.Models
@{
    Layout = null;
}
@{ List<HG_Category> listitems = new HG_Category().GetAll();}
@{List<HG_OrganizationDetails> listorgonization = new HG_OrganizationDetails().GetAll();  }
<div class="card">
    <div class="card-header">
        <h1 style="text-align:center"><b>USER ITEM</b> </h1>
        <hr />
    </div>
    <a href="/HG_Items/CreateEdit?ID=0" class="btn btn-success" data-ajax="true" data-ajax-update="#DynamicData" data-ajax-mode="replace" data-ajax-loading="#waiting"><i class="fa fa-plus">ADD</i></a>
    <div class="card-body">
        <table class="table table-bordered table-hover w-100" id="TBLID">
            <thead>


                <tr>
                    <th>@Html.DisplayNameFor(model=>model.Image)</th>
                    <th>
                        @Html.DisplayName( "Category Name")
                    </th>
                    <th>
                        @Html.DisplayName("Orgonization Name")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Plates)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ItemMode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Discount)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Image" width="60" height="60" />
                        </td>
                        <td>
                             @{HG_Category objcategory = listitems.Find(x => x.CategoryID == item.CategoryID); }
                            @objcategory.Category
                        </td>
                        <td>
                            @{HG_OrganizationDetails objorgonization = listorgonization.Find(x => x.OrgID == item.OrgID);}
                            @objorgonization.Name
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Items)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Plates)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemMode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discount)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            <a href=" /HG_Items/CreateEdit?ID=@item.ItemID" class="btn btn-warning btn-sm " data-ajax="true" data-ajax-update="#DynamicData" data-ajax-mode="replace" data-ajax-loading="#waiting" > Edit</a>
                            <a href="/HG_Items/Delete?ID=@item.ItemID" class="btn btn-danger btn-sm "> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>