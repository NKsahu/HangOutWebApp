
@{
    Layout = null;
}
<div class="card">
    <div class="card-header text-center"><b>Filter</b></div>
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("From Date")
                    @Html.TextBox("Fdate", DateTime.Now.ToString("dd-MM-yyyy"), new { @class = "form-control DateField" })
                </div>
                <div class="col-md-3">
                    @Html.Label("To Date")
                    @Html.TextBox("Tdate", DateTime.Now.Date.ToString("dd-MM-yyyy"), new { @class = "form-control DateField" })
                </div>
                <div class="col-sm-2">
                    <button id="Search" class="btn btn-secondary" style="margin-top:15%"><i class="fa fa-search"></i> Search</button>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="col" id="List">



</div>
<script>
    function Search() {
        $("#waiting").show();
        var Fdate = $("#Fdate").val();
        var Tdate = $("#Tdate").val();
        $.ajax({
            url: "/Reports/JoinFoodDo?Fdate=" + Fdate + "&Tdate=" + Tdate,
            type: "GET",
            success: function (data) {
                $("#waiting").hide();
                $("#List").html(data);

            },
            error: function (jqXhr, textStatus, errorMessage) { // error callback
                $("#waiting").hide();
            }

        });
    }
    $("#Search").click(function () {
        Search();
    });
</script>