@model HangOut.Models.Inventory.INTItems
@using HtmlHelpers.BeginCollectionItem
@{
    Layout = null;

}
@using HangOut.Models.Inventory;
<html>
<head>
</head>
<body>


    @using (Html.BeginCollectionItem("iNTItems"))
    {
        <div class="row MainDivs" id="Creacopydiv">
            @Html.HiddenFor(model => model.SubItemID)
            <div class="col-md-3">
                @Html.Label("Item")
                @Html.DropDownListFor(model => model.ItemID, new SelectList(INTGSTBL.GetAll(), "GSID", "Name"), "Select Item", new { @class = "form-control", required = "required" })


            </div>
            <div class="col-md-3">
                @Html.Label("Quantity")
                @Html.EditorFor(model => model.IQty, new { htmlAttributes = new { @class = "form-control autodouble", required = "required" } })

            </div>
            <div class="col-md-3">
                @{ List<INTUnits> listuni = INTUnits.GetAll();
                    listuni = listuni.FindAll(x => x.ParentId != 0);
                }
                @Html.Label("Unit")
                @Html.DropDownListFor(model => model.IUnitID, new SelectList(listuni, "UnitID", "Name"), "Select Unit", new { @class = "form-control", required = "required" })

            </div>
            <div class="col-md-3" id="btn">
                <span class="float-right">
                    <a class="btn btn-success btn-sm" onclick="DuplicateDiv();" style="margin-top: 29px;border-left-width: 0px;margin-right: 0px;margin-bottom: -1px;border-bottom-width: 0px;"> <i class="fa fa-plus"></i></a>
                </span>
            </div>
        </div>

    }

    <!--Hidden div-->
     <div class="row aa MainDivs" id="Creacopydiv2" style="display:none"> 
        @Html.HiddenFor(model => model.SubItemID)
        <div class="col-md-3">
            @Html.Label("Item")
            @Html.DropDownList("IParentId", new SelectList(INTGSTBL.GetAll(), "GSID", "Name"), "Select Item", new { @class = "form-control", required = "required" })


        </div>
        <div class="col-md-3">
            @Html.Label("Quantity")
            @Html.Editor("IQty", new { htmlAttributes = new { @class = "form-control autodouble", required = "required" } })

        </div>
        <div class="col-md-3">
            @{ List<INTUnits> listun = INTUnits.GetAll();
                listun = listun.FindAll(x => x.ParentId != 0);
            }
            @Html.Label("Unit")
            @Html.DropDownList("IUnitID", new SelectList(listun, "UnitID", "Name"), "Select Unit", new { @class = "form-control", required = "required" })

        </div>

    </div>
    <!--end -->
</body>
</html>