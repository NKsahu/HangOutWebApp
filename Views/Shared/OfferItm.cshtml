@model HangOut.Models.MyCustomer.ItemOffer
@using HtmlHelpers.BeginCollectionItem
@{
    Layout = null;
}
@using (Html.BeginCollectionItem("itemOffers"))
{
    <div class="row itemOffers">
        @Html.HiddenFor(model => model.ItemOfferId, new { @class = "ItemOfferId" })
        @Html.HiddenFor(model => model.ItemId, new { @class = "ItemId" })
        @Html.HiddenFor(model => model.IsDeleted, new { @class = "IsDeleted" })
        @Html.HiddenFor(model => model.CashBkId, new { @class = "CashBkId" })
        @Html.HiddenFor(model => model.TotalItemPrice, new { @class = "TotalItemPrice" })
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            @Html.Label("Item")
            @Html.TextBoxFor(model => model.ItemName, new { @class = "form-control ItemNameCls", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">
            @Html.Label("Item Price")
            @Html.TextBoxFor(model => model.TotalItemPrice, new { @class = "form-control ItemNameCls", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.TotalItemPrice, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-1">
            <a title="Add Item" class="btn btn-danger " onclick="RemoveItem(@Model.ItemId,this);"> <i class="fa fa-minus"></i></a>
        </div>
    </div>

}


