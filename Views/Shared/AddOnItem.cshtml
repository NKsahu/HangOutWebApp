@model HangOut.Models.POS.AddOnItems
@using HtmlHelpers.BeginCollectionItem
@{
    Layout = null;
}
<div class="AddOnItems">

    @using (Html.BeginCollectionItem("AddOnItemList"))
    {
        @Html.HiddenFor(model => model.AddOnItemId,new {@class= "AddOnItemId" })
        @Html.HiddenFor(model => model.Price , new { @class = "Price" })
        @Html.HiddenFor(model => model.ItemId, new { @class = "ItemId" })
        <div class="row">
            <div class="col-md-4">
                @Html.Label("Item")
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control Title", @required = "required",@readonly= "readonly" })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.Label("Amt")
                @Html.EditorFor(model => model.CostPrice, new { htmlAttributes = new { @class = "form-control CostPrice", required = "required" } })
                @Html.ValidationMessageFor(model => model.CostPrice, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.Label("Tax")
                @Html.EditorFor(model => model.Tax, new { htmlAttributes = new { @class = "form-control Tax", required = "required" } })
                @Html.ValidationMessageFor(model => model.Tax, "", new { @class = "text-danger" })
            </div>
        </div>
    }
</div>