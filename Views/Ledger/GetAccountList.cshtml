@model IEnumerable<HangOut.Models.Account.Ledger>

@using HangOut.Models.Account;
@{

    Layout = null;
}

<div class="card">

    <div class="card-header">
        <h3 class="text-center">Accounts</h3>
    </div>

    <div class="card-body">
        <table class="table" id="TBLID" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.PGID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody id="Tbody">
                @foreach (Ledger Obj in Model)
                {
                    <tr id="@Obj.ID">
                        <td>@Obj.ID</td>
                        <td>@Obj.Name</td>

                        <td>
                            <button class="btn btn-warning btn-sm " onclick="GetAccountDetails(@Obj.OrgId)"> Get Accounts Details</button>
                          
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
<script>
    function GetAccountDetails(OrgId) {
        $.ajax({
            type: 'GET',
            url: "/Accounts/Index?OrgId=" + OrgId,
            success: function (data) {
                $("#DynamicData").html(data);
                $('#waiting').hide();
            },
            error: function (jqXhr, textStatus, errorMessage) { // error callback
                $('#waiting').hide();
            }

        });
    }
</script>