@model IEnumerable<HangOut.Models.HG_Category>
@{
    Layout = null;
}

<div class="card">
    <div class="card-header">
        <h3 style="text-align:center"><b>ITEM</b> </h3>
        <hr />
        <button style="float:left;" onclick="BULKEXCELUPL()" class="btn btn-lg btn-info ">BULK UPLOAD</button>
        <button style="float:right !important;" onclick="DownloadExl()" class="btn btn-lg btn-info ">DOWNLOAD EXCEL</button>
    </div>
    <div class="row">
        <div class="col-md-4">
            <a href="/HG_Items/Index" data-ajax="true" data-ajax-update="#DynamicData" data-ajax-mode="replace" data-ajax-loading="#waiting" class="btn btn-default blackTest form-control">ITEM</a>
        </div>
        <div class="col-md-4">
            <a href="/HG_Category/Index" data-ajax="true" data-ajax-update="#DynamicData" data-ajax-mode="replace" data-ajax-loading="#waiting"  class="btn btn-default blackTest form-control">CATEGORY</a>
        </div>
        <div class="col-md-4">
            <a href="/HG_Category/AddonsIndex" data-ajax="true" data-ajax-update="#DynamicData" data-ajax-mode="replace" data-ajax-loading="#waiting"  class="btn btn-default blackBackground form-control">ADD ON</a>
        </div>

    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-5"></div>
            <div class="col-md-2">
                <button onclick="CreateEdit('0')" class="btn btn-info form-control">Add One</button>
            </div>
            <div class="col-md-5"></div>
        </div>
        <table class="table table-hover w-100 " id="TBLID">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Add On Category")
                    </th>
                    <th>
                        @Html.DisplayName("AddOn Items")
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="Tbody">
                @foreach (var item in Model)
                {
                <tr id="@item.CategoryID">
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        <button title="Add Onn Items"  onclick="AddOnIndex(@item.CategoryID)" class="btn btn-info btn-sm "> <i class="fas fa-sitemap"></i> </button>
                    </td>
                    <td>
                        <button class="btn btn-warning btn-sm " onclick="CreateEdit(@item.CategoryID)"> Edit</button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    function CreateEdit(ID) {
        if (ID != "0") {
            AddTr = false;
        } else {
            AddTr = true;
        }
        $('#waiting').show();
        $.ajax({
            type: 'GET',
            url: "/HG_Category/CreateEditAddon?ID=" + ID,
            success: function (data) {
                makedpt("HG_Category");
                $("#HG_Category > .modal-dialog > .modal-content > .modal-body").html(data);
                showdpt("HG_Category");
                $('#waiting').hide();
            },
            error: function (jqXhr, textStatus, errorMessage) { // error callback
                $('#waiting').hide();
            }
        });

    }
    function JsonSuccess(Jobj) {
        if (Jobj.data != undefined && Jobj.data == '1') {
            $('#waiting').hide();
            alert('Uploaded');
        }
        else {
            var Jitmobj = Jobj.data;
            console.log(Jitmobj);
            hidedpt("HG_Category");
            $('#waiting').hide();
            var HtmlStr = "<tr id='" + Jitmobj.CategoryID + "'>";
            HtmlStr += '<td>' + Jitmobj.Category + '</td>';
            HtmlStr += '<td><button title="Add Onn Items" onclick="AddOnIndex(' + Jitmobj.CategoryID +')" class="btn btn-info btn-sm "><i class="fas fa-sitemap"></i></button></td>';
            HtmlStr += '<td><button class="btn btn-warning btn-sm " onclick="CreateEdit(' + Jitmobj.CategoryID + ')"> Edit</button></td ></tr >';
            if (AddTr) {
                $("#Tbody").append(HtmlStr);
            }
            else {
                $('#' + Jitmobj.CategoryID).remove();
                $("#Tbody").append(HtmlStr);
            }
        }
    }
    function AddOnIndex(CatId) {
        $('#waiting').show();
        $.ajax({
            type: 'GET',
            url: "/HG_Items/CreateEditAddOn?CategryId=" + CatId,
            success: function (data) {
                makedpt("AddOnIndex");
                $("#AddOnIndex > .modal-dialog > .modal-content > .modal-body").html(data);
                showdpt("AddOnIndex");
                $('#waiting').hide();
            },
            error: function (jqXhr, textStatus, errorMessage) { // error callback
                $('#waiting').hide();
            }
        });


    }
    function BULKEXCELUPL() {
        $('#waiting').show();
        $.ajax({
            type: 'GET',
            url: "/HG_Items/UplExl",
            success: function (data) {
                makedpt("CreateSheat");
                $("#CreateSheat > .modal-dialog > .modal-content > .modal-body").html(data);
                showdpt("CreateSheat");
                $('#waiting').hide();
            },
            error: function (jqXhr, textStatus, errorMessage) { // error callback
                $('#waiting').hide();
            }
        });
    }
</script>