@model IEnumerable<HangOut.Models.Common.City>
@using HangOut.Models.Common
@{
    Layout = null;
    switch (Request.QueryString["Type"])
    {
        //case 1 for show filters only
        case "1":

            <div class="card">
                <div class="row">
                    <div class="col-md-7">

                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-sm-1">
                         <button   class="btn btn-success" id="AddNewCity"  onclick="AddCity();"    ><i class="fa fa-plus">ADD</i></button>
                    </div>
                </div>
                <div class="card-header text-center"><b>Filter</b></div>

                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3">
                                @Html.Label("State Name")
                                @{

                                    SelectList selectList = new SelectList(new State().GetAll(), "StateId", "Name");
                                }
                                @Html.DropDownList("SID", selectList, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2">
                                <button id="Search" class="btn btn-secondary" style="margin-top:15%"><i class="fa fa-search"></i> Search</button>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

            <div class="col" id="List">


            </div>



            break;
    }
}

<div class="col" id="List2">
    <div class="card">
        <div class="card-header">City List </div>
        <div class="card-body">
            <table class="table table-hover table-bordered text-center" id="TBLID">
                <thead>
                    <tr>
                        <th> Code </th>
                        <th> Name </th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CityId</td>
                            <td>@item.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
 
 
<script>
    $(document).ready(function () {

        setTimeout(function () {

            function Search() {
                $("#waiting").show();
                var StateCode = $("#SID").val();
                $.ajax({
                    url: "/City/index?Type=2&StateCode=" + StateCode,
                    type: "GET",
                    success: function (data) {
                        $("#List2").html("");
                        $("#List").html("");
                        $("#List").html(data);
                        $("#waiting").hide();
                    },
                    error: function (jqXhr, textStatus, errorMessage) { // error callback
                        $("#waiting").hide();
                    }

                });
            }
            $("#Search").click(function () {
                Search();
            });

        }, 2000);
    });

</script>
