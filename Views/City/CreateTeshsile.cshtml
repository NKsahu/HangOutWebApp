@model HangOut.Models.Common.City
@{Layout = null; }
<div class="card">
    <div class="card-header ">
        <h4 style="text-align:center;color:#000000"><b>ADD TALUKA/TEHSIL</b></h4>
        <hr />
    </div>
    <div class="card-body">

        @using (Ajax.BeginForm("CreateEdit", "City", new { ID = Model.CityId }, new AjaxOptions { HttpMethod = "POST", LoadingElementId = "waiting", OnSuccess = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                @Html.HiddenFor(model => model.Type)
                @Html.HiddenFor(model => model.StateId)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class=" col-sm-4">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label " })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="col-sm-1">
                    @Html.Label("Save", new { @class = "text-white" })
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>

            </div>
        }

    </div>
</div>
